# -*-makefile-*-
# Spheral++ CSPH package makefile
#-------------------------------------------------------------------------------
srcdir = @abs_srcdir@
VPATH = @abs_srcdir@
SPHERALTOP = @abs_top_srcdir@
BUILDTOP = @abs_top_builddir@

PKGNAME = CSPH
PKGDIR = $(PKGNAME)/
LIBTARGET = libSpheral_$(PKGNAME).$(DYLIBEXT)
SRCTARGETS = \
	$(srcdir)/computeCSPHSumMassDensityInst.cc \
	$(srcdir)/computeHullSumMassDensityInst.cc \
	$(srcdir)/computeCSPHCorrectionsInst.cc \
	$(srcdir)/computeCSPHEvaluationInst.cc \
	$(srcdir)/computeCSPHIntegralInst.cc \
	$(srcdir)/computeHullVolumesInst.cc \
	$(srcdir)/computeHVolumesInst.cc \
	$(srcdir)/computeNeighborHullInst.cc \
	$(srcdir)/computeVoronoiCentroids.cc \
	$(srcdir)/centerOfMass.cc \
	$(srcdir)/CSPHHydroBaseInst.cc \
	$(srcdir)/interpolateCSPHInst.cc \
	$(srcdir)/gradientCSPHInst.cc \
	$(srcdir)/HVolumePolicyInst.cc

PYTHONTARGETS = \
	$(srcdir)/CSPHHydros.py

#-------------------------------------------------------------------------------
include $(BUILDTOP)/helpers/makefile_master
