	$(srcdir)/VolumePolicyInst.cc \
	$(srcdir)/VoronoiMassDensityPolicyInst.cc \
	$(srcdir)/SumVoronoiMassDensityPolicyInst.cc \
	$(srcdir)/SecondMomentHourglassControlInst.cc \
	$(srcdir)/ThirdMomentHourglassControlInst.cc

SPHERALTOP = $(srcdir)/..
ARCH = $(SPHERALARCH)

