# -*-makefile-*-
# Spheral++ Boundary pybind11 package makefile
#-------------------------------------------------------------------------------
srcdir = @abs_srcdir@
VPATH = @abs_srcdir@
SPHERALTOP = @abs_top_srcdir@
BUILDTOP = @abs_top_builddir@

PKGNAME = Boundary
PKGDIR = $(PKGNAME)/
PYB11TARGET = Spheral$(PKGNAME).$(SHLIBEXT)

PYB11GENTARGETS = \
	PyBoundary.hh \
	PyBoundaryConcrete.hh \
	virtualPyBoundaryBindings.hh \
	PyBoundaryMesh.hh \
	virtualPyBoundaryMeshBindings.hh \
	PyPlanarBoundary.hh \
	virtualPyPlanarBoundaryBindings.hh

SRCTARGETS += \
	$(srcdir)/SpheralBoundary.cc

#------------------------------------------------------------------------------
include $(BUILDTOP)/helpers/makefile_master
EXTRALIBS += $(LDRPATH)
