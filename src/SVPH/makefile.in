	$(srcdir)/computeSVPHCorrectionsOnFacesInst.cc \
	$(srcdir)/computeSumVoronoiCellMassDensityFromFacesInst.cc \
	$(srcdir)/sampleFieldListSVPHInst.cc \
	$(srcdir)/gradientFieldListSVPHInst.cc \
	$(srcdir)/SVPHFacetedHydroBaseInst.cc \
	$(srcdir)/SVPHCorrectionsPolicyInst.cc \
	$(srcdir)/SVPHMassDensityPolicyInst.cc \
	$(srcdir)/CompatibleFaceSpecificThermalEnergyPolicyInst.cc \
	$(srcdir)/MeshIdealHPolicyInst.cc \
	$(srcdir)/SpecificThermalEnergyVolumePolicyInst.cc \
	$(srcdir)/CellPressurePolicyInst.cc

PYTHONTARGETS = \
	$(srcdir)/SVPHHydros.py

