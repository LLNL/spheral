# -*-makefile-*-
# Spheral++ BPLWraps makefile
#-------------------------------------------------------------------------------
srcdir = @abs_srcdir@
VPATH = @abs_srcdir@
SPHERALTOP = @abs_top_srcdir@
BUILDTOP = @abs_top_builddir@

PKGNAME = SpheralModules
PKGDIR = PBGWraps
PBGMODTARGET = $(PKGNAME).$(SHLIBEXT)
PBGTARGET = SpheralModulesBindings.py
INSTALLTARGETS = Spheral.pth

PYTHONPKGS = @PYTHONPKGS@
PBGPKGS = @PYTHONPKGS@
SPHERALMODULES = SpheralModules

#-------------------------------------------------------------------------------
# This stuff is for generating Mercurial revision info in the python, based on:
# https://www.mercurial-scm.org/wiki/VersioningWithMake
HGVERSION:= $(shell hg id -n -i --cwd $(srcdir))
version.py: hgstamp
.PHONY: update_hgstamp
hgstamp: update_hgstamp
	[ -f $@ ] || touch $@
	sed -e 's/@versionstring@/$(HGVERSION)/g' $(srcdir)/version.py > version.py

PYTHONTARGETS = \
	$(srcdir)/Spheral.py \
	$(srcdir)/SolidSpheral.py \
	version.py

#-------------------------------------------------------------------------------
include $(BUILDTOP)/helpers/makefile_master
LIBS += -lsiloh5 -lhdf5 $(LDRPATH)

#-------------------------------------------------------------------------------
CP = cp

force_build:

Spheral.pth:	force_build
	cp -f $(srcdir)/Spheral.pth $(PYTHONLIBDIR)
