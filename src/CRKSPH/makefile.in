	$(srcdir)/computeVoronoiCentroids.cc \
	$(srcdir)/centerOfMass.cc \
	$(srcdir)/CRKSPHHydroBaseInst.cc \
	$(srcdir)/interpolateCRKSPHInst.cc \
	$(srcdir)/gradientCRKSPHInst.cc \
	$(srcdir)/HVolumePolicyInst.cc \
	$(srcdir)/SolidCRKSPHHydroBaseInst.cc

PYTHONTARGETS = \
	$(srcdir)/CRKSPHHydros.py \
	$(srcdir)/SolidCRKSPHHydros.py

