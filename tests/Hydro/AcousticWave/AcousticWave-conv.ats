#-*-python-*-
# This is an ATS script to coordinate running convergence tests of the acoustic wave.
cfl = 0.2
nPerh = 1.51
Cl = 1.0
Cq = 1.0
filter = 0.0
for crk, label in ((False, "SPH"),
                   (True, "CRK")):
    for nx in (50, 100, 200, 400, 800, 1600):
        test(script = "AcousticWave-1d.py",
             clas = "--nx %i --A 0.001 --steps 100 --goalTime 0.0 --CRKSPH %s --cfl %g --nPerh %g --Cl %g --Cq %g --filter %g --graphics False --normOutputFile AcousticWave-%s-convergence.gnu" % (nx, crk, cfl, nPerh, Cl, Cq, filter, label), 
             label = "Planar Acoustic problem -- 1-D (serial %s, nx=%i)" % (label, nx))
