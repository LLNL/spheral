# This is an ATS script to coorindate running a series of tests of CRKSPH.
cfl = 0.25
nPerh = 1.51
Cl = 1.0
Cq = 1.0
filter = 0.2
test(script = "Hydro/Sod/Sod-planar-1d.py",
     clas = "--CRKSPH True --cfl %g --nPerh %g --Cl %g --Cq %g --filter %g --graphics True --clearDirectories True --serialDump True" % (cfl, nPerh, Cl, Cq, filter), 
     label = "Planar Sod problem -- 1-D (serial)")
test(script = "Hydro/Noh/Noh-planar-1d.py", 
     clas = "--CRKSPH True --cfl %g --nPerh %g --Cl %g --Cq %g --filter %g --graphics True --clearDirectories True --serialDump True" % (cfl, nPerh, Cl, Cq, filter), 
     label = "Planar Noh problem -- 1-D (serial)")
test(script = "Hydro/Noh/Noh-cylindrical-2d.py",
     clas = "--CRKSPH True --cfl %g --nPerh %g --Cl %g --Cq %g --filter %g --graphics True --clearDirectories True --outputFile 'Noh-cylindrical.ascii'" % (cfl, nPerh, Cl, Cq, filter), 
     label = "Cylindrical Noh problem -- 2-D (serial)")
test(script = "Hydro/Noh/Noh-spherical-3d.py",
     clas = "--CRKSPH True --cfl %g --nPerh %g --Cl %g --Cq %g --filter %g --graphics True --clearDirectories True --outputFile 'Noh-spherical.ascii'" % (cfl, nPerh, Cl, Cq, filter), 
     label = "Spherical Noh problem -- 3-D (10 proc)",
     np = 10)
test(script = "Hydro/Sedov/Sedov-planar-1d.py",
     clas = "--CRKSPH True --cfl %g --nPerh %g --Cl %g --Cq %g --filter %g --graphics True --clearDirectories True --serialDump True --smoothSpike True --nx1 401" % (cfl, nPerh, Cl, Cq, filter), 
     label = "Planar Sedov problem -- 1-D (serial)")
test(script = "Hydro/GreshoVortex/GreshoVortex.py",
     clas = "--CRKSPH True --cfl %g --nPerh %g --Cl %g --Cq %g --filter %g --graphics True --clearDirectories True --goalTime 3.0" % (cfl, nPerh, Cl, Cq, filter), 
     label = "Gresho vortex problem -- 2-D (64^2, 4 proc)",
     np = 4)
test(script = "Hydro/KelvinHelmholtz/KelvinHelmholtz-2d.py",
     clas = "--nx1 128 --nx2 128 --ny1 64 --ny2 64 --CRKSPH True --cfl %g --nPerh %g --Cl %g --Cq %g --filter %g --clearDirectories True" % (cfl, nPerh, Cl, Cq, filter), 
     label = "Kelvin-Helmholtz problem -- 2-D (128^2, 10 proc)",
     np = 10)
test(script = "Hydro/KelvinHelmholtz/KelvinHelmholtz-2d.py",
     clas = "--nx1 256 --nx2 256 --ny1 128 --ny2 128 --CRKSPH True --cfl %g --nPerh %g --Cl %g --Cq %g --filter %g --clearDirectories True" % (cfl, nPerh, Cl, Cq, filter), 
     label = "Kelvin-Helmholtz problem -- 2-D (256^2, 20 proc)",
     np = 20)
test(script = "Hydro/TriplePoint/TriplePoint-xy.py",
     clas = "--CRKSPH True --cfl %g --nPerh %g --Cl %g --Cq %g --filter %g --clearDirectories True" % (cfl, nPerh, Cl, Cq, filter), 
     label = "Triple-point problem -- 2-D (level 1 mesh, 4 proc)",
     np = 4)
test(script = "Hydro/TriplePoint/TriplePoint-xy.py",
     clas = "--CRKSPH True --cfl %g --nPerh %g --Cl %g --Cq %g --filter %g --clearDirectories True --nx1 40 --nx2 80 --nx3 240 --ny1 120 --ny2 20 --ny3 60" % (cfl, nPerh, Cl, Cq, filter), 
     label = "Triple-point problem -- 2-D (level 2 mesh, 10 proc)",
     np = 10)
