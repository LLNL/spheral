#-*-python-*-
# This is an ATS script to coorindate running a series of tests of CRKSPH.
cfl = 0.25
nPerh = 1.01
Cl = 1.0
Cq = 1.0
filter = 0.0
KernelConstructor = "NBSplineKernel"
order = 5
linearInExpansion = False
for crk, label in ((False, "SPH"),
                   (True, "CRK"),):
    test(script = "Hydro/Sod/Sod-planar-1d.py",
         clas = "--CRKSPH %s --KernelConstructor %s --order %i --cfl %g --nPerh %g --Cl %g --Cq %g --linearInExpansion %s --filter %g --graphics True --clearDirectories True --outputFile Sod-planar.ascii" % (crk, KernelConstructor, order, cfl, nPerh, Cl, Cq, linearInExpansion, filter), 
         label = "Planar Sod problem -- 1-D (serial %s)" % label)
    test(script = "Hydro/DoubleBlastwave/DoubleBlastwave-1d.py",
         clas = "--CRKSPH %s --KernelConstructor %s --order %i --cfl %g --nPerh %g --Cl %g --Cq %g --linearInExpansion %s --filter %g --graphics True --clearDirectories True" % (crk, KernelConstructor, order, cfl, nPerh, Cl, Cq, linearInExpansion, filter), 
         label = "Planar double blastwave -- 1-D (400 nodes, serial %s)" % label)
    test(script = "Hydro/DoubleBlastwave/DoubleBlastwave-1d.py",
         clas = "--CRKSPH %s --KernelConstructor %s --order %i --cfl %g --nPerh %g --Cl %g --Cq %g --linearInExpansion %s --filter %g --graphics True --clearDirectories True --nx 1600" % (crk, KernelConstructor, order, cfl, nPerh, Cl, Cq, linearInExpansion, filter), 
         label = "Planar double blastwave -- 1-D (1600 nodes, serial %s)" % label)
    test(script = "Hydro/Noh/Noh-planar-1d.py", 
         clas = "--CRKSPH %s --KernelConstructor %s --order %i --cfl %g --nPerh %g --Cl %g --Cq %g  --linearInExpansion %s --filter %g --graphics True --clearDirectories True --outputFile Noh-planar.ascii" % (crk, KernelConstructor, order, cfl, nPerh, Cl, Cq, linearInExpansion, filter), 
         label = "Planar Noh problem -- 1-D (serial %s)" % label)
    test(script = "Hydro/Noh/Noh-cylindrical-2d.py",
         clas = "--CRKSPH %s --KernelConstructor %s --order %i --cfl %g --nPerh %g --Cl %g --Cq %g  --linearInExpansion %s --filter %g --graphics True --clearDirectories True --outputFile 'Noh-cylindrical.ascii'" % (crk, KernelConstructor, order, cfl, nPerh, Cl, Cq, linearInExpansion, filter), 
         label = "Cylindrical Noh problem -- 2-D (serial %s)" % label)
    test(script = "Hydro/Noh/Noh-spherical-3d.py",
         clas = "--CRKSPH %s --KernelConstructor %s --order %i --cfl %g --nPerh %g --Cl %g --Cq %g  --linearInExpansion %s --filter %g --graphics True --clearDirectories True --outputFile 'Noh-spherical.ascii'" % (crk, KernelConstructor, order, cfl, nPerh, Cl, Cq, linearInExpansion, filter), 
         label = "Spherical Noh problem -- 3-D (10 proc %s)" % label,
         np = 10)
    test(script = "Hydro/Sedov/Sedov-planar-1d.py",
         clas = "--CRKSPH %s --KernelConstructor %s --order %i --cfl %g --nPerh %g --Cl %g --Cq %g  --linearInExpansion %s --filter %g --graphics True --clearDirectories True --smoothSpike True --outputFile Sedov-planar.ascii" % (crk, KernelConstructor, order, cfl, nPerh, Cl, Cq, linearInExpansion, filter), 
         label = "Planar Sedov problem -- 1-D (serial %s)" % label)
    test(script = "Hydro/Sedov/Sedov-cylindrical-2d.py",
         clas = "--CRKSPH %s --KernelConstructor %s --order %i --cfl %g --nPerh %g --Cl %g --Cq %g  --linearInExpansion %s --filter %g --graphics True --clearDirectories True --smoothSpike True --outputFile Sedov-cylindrical.ascii" % (crk, KernelConstructor, order, cfl, nPerh, Cl, Cq, linearInExpansion, filter), 
         label = "Cylindrical Sedov problem -- 2-D (serial %s)" % label)
    test(script = "Hydro/Sedov/Sedov-spherical-3d.py",
         clas = "--CRKSPH %s --KernelConstructor %s --order %i --cfl %g --nPerh %g --Cl %g --Cq %g  --linearInExpansion %s --filter %g --graphics True --clearDirectories True --smoothSpike True --outputFile Sedov-spherical.ascii" % (crk, KernelConstructor, order, cfl, nPerh, Cl, Cq, linearInExpansion, filter), 
         label = "Spherical Sedov problem -- 3-D (10 proc %s)" % label,
         np = 10)
    test(script = "Hydro/GreshoVortex/GreshoVortex.py",
         clas = "--CRKSPH %s --KernelConstructor %s --order %i --cfl %g --nPerh %g --Cl %g --Cq %g  --linearInExpansion %s --filter %g --graphics True --clearDirectories True --goalTime 3.0 --outputFile GreshoVortex.ascii" % (crk, KernelConstructor, order, cfl, nPerh, Cl, Cq, linearInExpansion, filter), 
         label = "Gresho vortex problem -- 2-D (64^2, 4 proc, %s)" % label,
         np = 4)
    test(script = "Hydro/KelvinHelmholtz/KelvinHelmholtz-2d_McNally.py",
         clas = "--nx1 256 --nx2 256 --ny1 128 --ny2 128 --CRKSPH %s --KernelConstructor %s --order %i --cfl %g --nPerh %g --Cl %g --Cq %g  --linearInExpansion %s --filter %g --clearDirectories True --graphMixing True --mixFile KH_%s_256x256_ats.gnu" % (crk, KernelConstructor, order, cfl, nPerh, Cl, Cq, linearInExpansion, filter, label), 
         label = "Kelvin-Helmholtz problem -- 2-D (256^2, 10 proc, %s)" % label,
         np = 10)
    test(script = "Hydro/TriplePoint/TriplePoint-xy.py",
         clas = "--CRKSPH %s --KernelConstructor %s --order %i --cfl %g --nPerh %g --Cl %g --Cq %g  --linearInExpansion %s --filter %g --clearDirectories True --XSPH False" % (crk, KernelConstructor, order, cfl, nPerh, Cl, Cq, linearInExpansion, filter), 
         label = "Triple-point problem -- 2-D (level 1 mesh, 4 proc, %s)" % label,
         np = 4)
