    test(script = "Hydro/KelvinHelmholtz/KelvinHelmholtz-2d.py",
         clas = "--nx1 128 --nx2 128 --ny1 64 --ny2 64 --CRKSPH %s --cfl %g --nPerh %g --Cl %g --Cq %g  --linearInExpansion %s --filter %g --clearDirectories True" % (crk, cfl, nPerh, Cl, Cq, linearInExpansion, filter), 
         label = "Kelvin-Helmholtz problem -- 2-D (128^2, 10 proc)",
         np = 10)
