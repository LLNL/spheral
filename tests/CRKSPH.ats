     inputFile = "Hydro/Noh/Noh-cylindrical-2d.py",
     opts = "--CRKSPH True --cfl %g --nPerh %g --Cl %g --Cq %g --filter %g --graphics None --clearDirectories True" % (cfl, nPerh, Cl, Cq, filter), 
     label = "Cylindrical Noh problem -- 2-D (serial)")
test(executable = executable,
     inputFile = "Hydro/Sedov/Sedov-planar-1d.py",
     opts = "--CRKSPH True --cfl %g --nPerh %g --Cl %g --Cq %g --filter %g --graphics None --clearDirectories True --serialDump True" % (cfl, nPerh, Cl, Cq, filter), 
     label = "Cylindrical Noh problem -- 2-D (serial)")
test(executable = executable,
     inputFile = "Hydro/GreshoVortex/GreshoVortex.py",
     opts = "--CRKSPH True --cfl %g --nPerh %g --Cl %g --Cq %g --filter %g --graphics None --clearDirectories True --goalTime 3.0" % (cfl, nPerh, Cl, Cq, filter), 
     label = "Gresho vortex problem -- 2-D (serial)")
test(executable = executable,
     inputFile = "Hydro/KelvinHelmholtz/KelvinHelmholtz-2d.py",
     opts = "--nx1 128 --nx2 128 --ny1 64 --ny2 64 --CRKSPH True --cfl %g --nPerh %g --Cl %g --Cq %g --filter %g --graphics None --clearDirectories True" % (cfl, nPerh, Cl, Cq, filter), 
     label = "Kelvin-Helmholtz problem -- 2-D (serial)")
