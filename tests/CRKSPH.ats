# This is an ATS script to coorindate running a series of tests of CRKSPH.
executable = sys.executable
cfl = 0.25
nPerh = 1.5
Cl = 1.0
Cq = 1.0
test(executable = executable,
     inputFile = "Hydro/Sod/Sod-planar-1d.py",
     opts = "--CRKSPH True --cfl %g --nPerh %g --Cl %g --Cq %g --graphics None --clearDirectories True" % (cfl, nPerh, Cl, Cq), 
     label = "Planar Sod problem -- 1-D (serial)")
test(executable = executable,
     inputFile = "Hydro/Noh/Noh-planar-1d.py", 
     opts = "--CRKSPH True --cfl %g --nPerh %g --Cl %g --Cq %g --graphics None --clearDirectories True" % (cfl, nPerh, Cl, Cq), 
     label = "Planar Noh problem -- 1-D (serial)")
test(executable = executable,
     inputFile = "Hydro/Noh/Noh-cylindrical-2d.py",
     opts = "--CRKSPH True --cfl %g --nPerh %g --Cl %g --Cq %g --graphics None --clearDirectories True" % (cfl, nPerh, Cl, Cq), 
     label = "Cylindrical Noh problem -- 2-D (serial)")
